<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for light mode (Material Design) -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary branding color for the app -->
        <item name="colorPrimary">@color/my_app_primary</item>

        <!-- Darker variant of the primary color -->
        <item name="colorPrimaryDark">@color/my_app_primary_dark</item>

        <!-- Secondary color for the app -->
        <item name="colorSecondary">@color/my_app_secondary</item>

        <!-- Error color for the app -->
        <item name="colorError">@color/my_app_error</item>

        <!-- Text color for the primary background content -->
        <item name="android:textColorPrimary">@color/my_app_on_primary</item>

        <!-- Text color for the secondary background content -->
        <item name="android:textColorSecondary">@color/my_app_on_secondary</item>

        <!-- Background color for the app -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Background color for the action bar -->
        <item name="android:colorBackground">@color/my_app_primary</item>
    </style>
</resources>

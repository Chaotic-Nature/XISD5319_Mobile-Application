<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenn"
    android:backgroundTintMode="src_over"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".FindLearnerActivity">

    <TextView
        android:id="@+id/pageHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/find_learner"
        android:textColor="@color/my_app_on_primary"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/instructionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Enter learner ID number below"
        android:textColor="@color/my_app_on_primary"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idNumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="ID Number"
        app:boxBackgroundColor="@color/my_app_on_surface"
        app:boxBackgroundMode="filled"
        app:helperTextTextColor="@color/my_app_primary_dark">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/my_app_primary_dark" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:text="Search" />

    <TextView
        android:id="@+id/resultsLabel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Results:"
        android:textColor="@color/my_app_on_primary"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/learnerInfoRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
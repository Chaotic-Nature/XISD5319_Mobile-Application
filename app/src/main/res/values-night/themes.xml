<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for dark mode (Material Design) -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents">
        <!-- Primary branding color for the app in dark mode -->
        <item name="colorPrimary">@color/my_app_primary</item>

        <!-- Darker variant of the primary color for dark mode -->
        <item name="colorPrimaryDark">@color/my_app_primary_dark</item>

        <!-- Secondary color for the app in dark mode -->
        <item name="colorSecondary">@color/my_app_secondary</item>

        <!-- Error color for the app in dark mode -->
        <item name="colorError">@color/my_app_error</item>

        <!-- Text color for the primary background content in dark mode -->
        <item name="android:textColorPrimary">@color/my_app_on_primary</item>

        <!-- Text color for the secondary background content in dark mode -->
        <item name="android:textColorSecondary">@color/my_app_on_secondary</item>

        <!-- Background color for the app in dark mode -->
        <item name="android:windowBackground">@color/my_app_surface</item>

        <!-- Background color for the action bar in dark mode -->
        <item name="android:colorBackground">@color/my_app_primary</item>
    </style>
</resources>
